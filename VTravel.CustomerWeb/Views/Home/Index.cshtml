                        <h2 class="stylish">@banner.title</h2>
                        <h1>@banner.description</h1>
                    </div>
                    <picture>
                        <source media="(max-width: 320px)" srcset="@banner.image_url.Replace("/image/upload/", "/image/upload/w_320,c_scale/")">
                        <source media="(max-width: 375px)" srcset="@banner.image_url.Replace("/image/upload/", "/image/upload/w_375,c_scale/")">
                        <source media="(max-width: 414px)" srcset="@banner.image_url.Replace("/image/upload/", "/image/upload/w_414,c_scale/")">
