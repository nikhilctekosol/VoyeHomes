                        <img src="@banner.image_url.Replace("/image/upload/", "/image/upload/w_1920,c_scale/")" alt="Voye Homes" onerror="this.src='/assets/img/default.jpg'">
                    </picture>
                </a>
            </div>

        }
    </div>
}

<div class="container">
    @if (Model.featureList.Count > 0)
    {
        <!-- Values -->
        <section class="values">
            <div class="value-slider">
                @foreach (var feature in Model.featureList)
                {
                    <div class="box">
                        @if (feature.thumbnail != null)
                        {
                            <img src="@feature.thumbnail" alt="@feature.title"
                                 onerror="this.src='/assets/img/default.jpg'" />
                        }
                        <p>@feature.title</p>
                    </div>

                }
            </div>
        </section>
    }




